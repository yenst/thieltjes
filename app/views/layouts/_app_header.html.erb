<header class="sticky top-0 z-30 flex items-center justify-between border-b border-gray-200 bg-white px-4 py-3 shadow-sm">
  <div class="flex items-center gap-3">
    <button
      type="button"
      class="rounded-lg border border-gray-200 p-2 text-gray-600 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-cyan-500 md:hidden"
      aria-controls="app-sidebar"
      aria-expanded="false"
      data-action="sidebar#toggleMobile"
    >
      <span class="sr-only">Toggle navigation</span>
      <%= icon "list", variant: :bold, class: "h-5 w-5" %>
    </button>
    <button
      type="button"
      class="hidden rounded-lg border border-gray-200 p-2 text-gray-600 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-cyan-500 md:inline-flex"
      aria-label="Toggle sidebar width"
      aria-pressed="false"
      data-action="sidebar#toggleCollapse"
      data-sidebar-target="collapseButton"
    >
      <span class="sr-only">Collapse sidebar</span>
      <%= icon "sidebar-simple", variant: :bold, class: "collapse-icon h-5 w-5 transition-transform duration-300" %>
    </button>
    <h1 class="text-lg font-semibold text-gray-900">
      <%= content_for?(:page_title) ? yield(:page_title) : "Dashboard" %>
    </h1>
  </div>

  <div class="flex items-center gap-3 text-sm text-gray-600">
    <% if authenticated? %>
      <span>
        Signed in as
        <strong class="font-semibold text-gray-900"><%= Current.user.email_address %></strong>
      </span>
      <%= button_to "Sign out", session_path, method: :delete, class: "rounded-lg bg-cyan-600 px-3 py-1.5 font-medium text-white hover:bg-cyan-700 focus:outline-none focus:ring-2 focus:ring-cyan-500" %>
    <% else %>
      <%= link_to "Sign in", new_session_path, class: "rounded-lg border border-cyan-600 px-3 py-1.5 font-medium text-cyan-600 hover:bg-cyan-50 focus:outline-none focus:ring-2 focus:ring-cyan-500" %>
    <% end %>
  </div>
</header>
