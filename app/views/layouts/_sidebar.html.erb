<aside
  id="app-sidebar"
  class="fixed inset-y-0 left-0 z-40 hidden w-64 border-r border-gray-200 bg-white shadow-lg transition-all duration-300 md:block"
  aria-label="Sidebar"
  data-sidebar-target="sidebar"
>
  <div class="flex h-full flex-col">
    <div class="flex items-center justify-between px-4 py-4">
      <%= link_to root_path, class: "flex items-center gap-2 text-lg font-semibold text-cyan-700" do %>
        <%= icon "rocket-launch", variant: :bold, class: "h-6 w-6" %>
        <span class="sidebar-label" data-sidebar-target="label">Dashboard</span>
      <% end %>
      <button
        type="button"
        class="rounded-lg p-1 text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-cyan-500 md:hidden"
        aria-controls="app-sidebar"
        aria-label="Close sidebar"
        data-action="sidebar#toggleMobile"
      >
        <span class="sr-only">Close sidebar</span>
        <%= icon "x", variant: :bold, class: "h-5 w-5" %>
      </button>
    </div>

    <nav class="flex flex-1 flex-col gap-1 px-2 pb-6">
      <%= link_to root_path, class: "sidebar-link flex items-center gap-3 rounded-lg px-3 py-2 text-sm font-medium text-gray-700 hover:bg-gray-100 hover:text-cyan-700" do %>
        <%= icon "house", variant: :bold, class: "h-5 w-5 text-gray-400" %>
        <span class="sidebar-label" data-sidebar-target="label">Home</span>
      <% end %>
    </nav>
  </div>
</aside>
